extends layout

block content

	-data = data || {}

	if errors
		ul
			for error in errors
				li= error.msg

	form(action="." method="POST" class="form-node-form")
		div()
		
		label(for="name") Name:
		input(
			type="text"
			id="name"
			name="name"
			class= "form-control"
			value=data.name
		)
		
		label(for="email") Email:
		input(
			type="email"
			id="email"
			name="email"
			class="form-control"
			value=data.email
		)
		input(type="submit" value="Submit" class="btn btn-lg btn-primary btn-block")
		input(type="button" value="Admin" onclick="window.location.href='./list'" class="rainbow-button")
		//- creation d'un bouton qui lorsque que l'on clic renvoie vers l'url localhost:3070/list